<style>
    body {
    margin: 0;
    font-family: Arial, sans-serif;
}

.fixed-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #333;
    color: #fff;
    z-index: 1000;
    transition: background-color 0.3s;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
}

.logo {
    margin: 0;
    font-size: 1.5rem;
}

.nav-links {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
}

.nav-links li {
    margin-right: 20px;
}

.nav-links a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s;
    font-size: 1.1rem;
}

.nav-links a:hover {
    color: #3b2fe5;
}

.fixed-nav.scrolled {
    background-color: #222;
}
</style>
<body>
    <nav class="fixed-nav">
        <div class="container">
            <h1 class="logo">Logo</h1>
            <ul class="nav-links">
                <li><a href="#">Home</a></li>
